{
    "compilerOptions": {
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "target": "ES6",
        "module": "commonjs",
        "outDir": "./dist",
        "strict": true,
        "baseUrl": "./src",
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "include": [
        "src/**/*",
        "Gruntfile.js"
    ],
    "exclude": [
        "node_modules"
    ]
}