{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": true,
    "declaration": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./build",
    "baseUrl": "./src",
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}